/* new threadtable layout */

.threads {
    background-color: #473D3F;
    font-family: "Arial";
    border-left: solid 2px #BBB;
    border-collapse: collapse;
    width: 100%;
}

.threads td {
  padding: 10px 12px 10px 10px;
  border-bottom: solid 2px #888;
}

.threads td a{
  padding: 10px 32px 10px 10px;
  display: block;
  margin: -10px -32px -10px -10px;
  text-decoration: none;
}

.post:hover {
    background-color: #7A6F6F;
}

.threadname {
  font-weight: bold;
  color: #58B07D;
  text-decoration: none;
}

.threadname:hover {
  font-weight: bold;
  color: #58B07D;
  text-decoration: none;
}

.username {
  font-weight: bold;
  color: #E87435;
  text-decoration: none;
}

.username:hover {
  font-weight: bold;
  color: #E87435;
  text-decoration: none;
}

.threadby {
  color: white;
  text-decoration: none;
}

.update {
  color: white;
  text-decoration: none;

}

.threadby:hover {
  color: white;
  text-decoration: none;
}

.update:hover {
  color: white;
  text-decoration: none;

}